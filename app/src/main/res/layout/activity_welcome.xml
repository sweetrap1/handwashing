<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".gui.WelcomeActivity">

    <ScrollView
        android:id="@+id/scroll_view_welcome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/checkbox_dont_show_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/txt_welcome_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_intro"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_guest_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/txt_welcome_guest_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_guest_desc"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.1"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_admin_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/txt_welcome_admin_desc_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_admin_desc_login"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.1"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/txt_welcome_admin_desc_creds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_admin_desc_creds"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.1"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/txt_welcome_admin_desc_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_admin_desc_pass"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.1"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_free_version_title"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"/>
            <TextView
                android:id="@+id/txt_welcome_free_employees"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_free_employees"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.1"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/txt_welcome_free_no_import"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_free_no_import"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.1"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/txt_welcome_free_no_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_free_no_logo"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.1"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/txt_welcome_free_consider_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_free_consider_pro"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

        </LinearLayout>
    </ScrollView>

    <CheckBox
        android:id="@+id/checkbox_dont_show_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_checkbox_dont_show"
        app:layout_constraintBottom_toTopOf="@+id/btn_continue_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/btn_continue_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_button_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>