<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    tools:context=".gui.ApplySoapActivity">

    <LinearLayout
        android:id="@+id/content_area"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/text_overall_timer_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.4"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/text_step_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step 2: Apply Soap &amp; Scrub"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/image_step_animation"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_apply_soap_anim"
            android:layout_marginTop="20dp"
            android:contentDescription="Apply soap and scrub animation"/>

        <TextView
            android:id="@+id/text_step_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:text="Apply soap and scrub your hands vigorously for at least 20 seconds, covering all surfaces."
            android:textSize="20sp"
            android:gravity="center"
            android:layout_marginTop="20dp" />

        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="28dp">

            <ProgressBar
                android:id="@+id/progress_step_timer"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="20000"
                android:progress="0"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:rotation="-90" />

            <TextView
                android:id="@+id/text_step_timer_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="20s"
                android:textSize="24sp"
                android:textStyle="bold" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_overall_timer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overall Time Remaining:"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/progress_overall_timer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"/>

    <ProgressBar
        android:id="@+id/progress_overall_timer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="37000"
        android:progress="0"
        app:layout_constraintBottom_toTopOf="@id/text_overall_timer_value"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/text_overall_timer_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="32s"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
