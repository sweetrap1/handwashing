<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout_admin_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.AdminDashboardActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_admin_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_admin_dashboard"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Admin Dashboard"
            app:titleCentered="true"
            app:popupTheme="@style/AppPopupMenu" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scrollview_admin_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_overview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Today's Overview"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:layout_marginBottom="12dp"
                        android:textColor="?attr/colorPrimary"
                        android:layout_gravity="center_horizontal"/>
                    <TextView
                        android:id="@+id/txt_overview_total_washes_today"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total Handwashes Today: N/A"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp"/>
                    <TextView
                        android:id="@+id/txt_overview_active_employees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Active Employees: N/A"
                        android:textSize="16sp"
                        android:layout_marginBottom="6dp"/>
                    <TextView
                        android:id="@+id/txt_overview_top_washer_today"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Top Washer Today: N/A"
                        android:textSize="16sp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_core_actions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_overview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false" android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_go_to_manage_employees"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:text="Employees"
                        android:lines="2"
                        android:gravity="center"
                        app:icon="@drawable/ic_manage_accounts"
                        app:iconGravity="textTop"
                        app:iconPadding="8dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_margin="4dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_upload_logo"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:text="App Logo"
                        android:lines="2"
                        android:gravity="center"
                        app:icon="@android:drawable/ic_menu_gallery" app:iconGravity="textTop"
                        app:iconPadding="8dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_margin="4dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_search_download"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_core_actions"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Handwash Log Utilities"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:layout_marginBottom="12dp"
                        android:layout_gravity="center_horizontal" />
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="First Name (Optional)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_search_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:minHeight="48dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Last Name (Optional)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_search_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:minHeight="48dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Employee ID (Optional)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_search_employee_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:minHeight="48dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:hint="Start Date">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_search_start_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="date"
                            android:minHeight="48dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:hint="End Date">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_search_end_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="false"
                            android:inputType="date"
                            android:minHeight="48dp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_search_handwashes"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="56dp"
                            android:text="Search"
                            app:icon="@android:drawable/ic_menu_search"
                            android:layout_marginEnd="4dp"/>
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_show_download_data_dialog"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:minHeight="56dp"
                            android:text="Download"
                            app:icon="@android:drawable/stat_sys_download_done"
                            android:layout_marginStart="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_messages_results"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_search_download"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/lbl_message_area_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messages / Results"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/txt_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Status messages will appear here."
                        android:minHeight="40dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_search_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="150dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        tools:listitem="@layout/item_handwash_log" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>