<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout_admin_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.AdminDashboardActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_admin_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_admin_dashboard"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="Admin Dashboard"
            app:titleCentered="true"
            app:popupTheme="@style/AppPopupMenu" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scrollview_admin_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_center_split"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.45" /> <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_overview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline_center_split"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Today's Overview"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:layout_marginBottom="12dp"
                    android:textColor="?attr/colorPrimary"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/txt_overview_total_washes_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total Handwashes Today: N/A"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/txt_overview_active_employees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Active Employees: N/A"
                    android:textSize="16sp"
                    android:layout_marginBottom="6dp"/>
                <TextView
                    android:id="@+id/txt_overview_top_washer_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Top Washer Today: N/A"
                    android:textSize="16sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_search_handwashes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_overview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_center_split"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/lbl_search_handwashes_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Search Handwash Logs"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:layout_marginBottom="12dp"
                        android:layout_gravity="center_horizontal" />
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="First Name (Optional)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_search_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:minHeight="48dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Last Name (Optional)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_search_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textPersonName|textCapWords"
                            android:minHeight="48dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:hint="Employee ID (Optional)">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_search_employee_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:minHeight="48dp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:hint="Start Date">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_search_start_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="false"
                                android:inputType="date"
                                android:minHeight="48dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:hint="End Date">
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/edit_search_end_date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="true"
                                android:focusable="false"
                                android:inputType="date"
                                android:minHeight="48dp" />
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_search_handwashes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:layout_marginTop="8dp"
                        android:text="Search Logs"
                        app:icon="@android:drawable/ic_menu_search"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_messages_results"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_search_handwashes"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline_center_split"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/lbl_message_area_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Messages / Results"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center_horizontal" />
                    <TextView
                        android:id="@+id/txt_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Status messages will appear here."
                        android:minHeight="40dp"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_search_results"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="150dp"
                        android:layout_marginTop="8dp"
                        android:visibility="gone"
                        tools:listitem="@layout/item_handwash_log" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_database_management"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@id/guideline_center_split"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/lbl_database_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Database Management"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:layout_marginBottom="12dp"
                        android:layout_gravity="center_horizontal"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_go_to_manage_employees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:text="Manage Employees"
                        app:icon="@android:drawable/ic_menu_manage"
                        android:layout_marginBottom="8dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_show_download_data_dialog"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:text="Download Data Report"
                        app:icon="@android:drawable/stat_sys_download_done"
                        android:layout_marginBottom="8dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_delete_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:text="Delete Data Range"
                        app:icon="@android:drawable/ic_menu_delete"
                        app:backgroundTint="?attr/colorError"
                        android:textColor="?attr/colorOnError"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_branding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/card_database_management"
                app:layout_constraintStart_toEndOf="@id/guideline_center_split"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                app:cardElevation="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/lbl_branding_section_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Branding"
                        android:textAppearance="?attr/textAppearanceHeadline6"
                        android:layout_marginBottom="12dp"
                        android:layout_gravity="center_horizontal"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_upload_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="56dp"
                        android:text="Upload/Change Logo"
                        app:icon="@android:drawable/ic_menu_gallery"
                        android:layout_marginBottom="8dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_remove_logo"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:text="Remove App Logo"
                        android:textColor="?attr/colorError"
                        app:icon="@android:drawable/ic_menu_delete"
                        app:iconTint="?attr/colorError"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>